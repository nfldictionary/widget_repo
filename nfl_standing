<body>
  <div class="card">
    <h2>NFL Standings</h2>
    <table id="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Team</th>
          <th>W</th>
          <th>L</th>
          <th>T</th>
          <th>Pct</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
    <div class="muted" id="status">Loading…</div>
  </div>

  <script>
    const API_KEY = "dd9ab8e54c8f460d8ee479bc577330ee";
    const SEASON = "2024REG";

    async function loadStandings() {
      const status = document.getElementById("status");
      const tbody = document.querySelector("#table tbody");

      try {
        const url = `https://api.sportsdata.io/v3/nfl/scores/json/Standings/${SEASON}?key=${API_KEY}`;
        const res = await fetch(url);
        const data = await res.json();

        // 승률 기준 정렬
        data.sort((a, b) => b.Percentage - a.Percentage);

        tbody.innerHTML = "";
        data.forEach((team, index) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
            <td>${index + 1}</td>
            <td class="team">${team.City} ${team.Name}</td>
            <td>${team.Wins}</td>
            <td>${team.Losses}</td>
            <td>${team.Ties}</td>
            <td>${team.Percentage.toFixed(3)}</td>
          `;
          tbody.appendChild(tr);
        });

        status.textContent = "Updated";
      } catch (e) {
        status.textContent = "Error loading data";
        console.error(e);
      }
    }

    loadStandings();
  </script>
</body>
</html>
